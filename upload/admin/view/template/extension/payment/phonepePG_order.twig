<div class="" id="phonepePG_payment_area">
  {% if savePhonepeResponse == true %}
    <div class="btn-area pull-left">
        <a href="javascript:void(0);"  id="button-fetch" data-toggle="tooltip" title="Fetch Status" class="btn btn-info"><i class="fa fa-refresh"></i></a>
    </div>
  {% endif %} 
  <div class="message"></div>
</div>
<style>.btn-area{margin: 0 20px 30px 0;} .phonepe_highlight{ font-weight: bold;}.redColor{color:#f00;}</style>
<table class="table table-striped table-bordered" id="phonepePG_payment_table">
   {% for key,value in phonepePG_response %}
    {% set  _class = (key == 'STATUS' and value == 'PENDING') ? 'phonepe_highlight redColor' : '' %}
    <tr>
      <td class="text-left">{{ key }}</td>
      <td class="text-left {{ _class }}">{{ value }}
      </td>
    </tr>
    {% endfor %}
</table>

{% if savePhonepeResponse == true %}
<script type="text/javascript"><!--
    $("#button-fetch").click(function () {
      $('#phonepePG_payment_area div.message').html('');
        $.ajax({
          type: 'POST',
          dataType: 'json',
          data: {'phonepe_order_id': '{{ phonepe_order_id }}','order_data_id': '{{ order_data_id }}'},
          url: 'index.php?route=extension/payment/phonepePG/savetxnstatus&user_token={{ user_token }}',
          beforeSend: function () {
            $('#button-fetch i').addClass('fa-spin');
          },
          success: function (data) {
            var html = '';
            if (data.success == true) {
              $.each(data.response, function (index, value) {
                var _class = (index == 'STATUS' && value == 'PENDING') ? 'phonepe_highlight redColor' : '';
                html += '<tr>';
                html += '<td class="text-left">' + index + '</td>';
                html += '<td class="text-left '+ _class +'">' + value + '</td>';
                html += '</tr>';
              });
              
              $('#phonepePG_payment_table').html(html);
              $('#phonepePG_payment_area div.message').html('<div class="alert alert-success">' + data.message +'</div>');
            }else{
              $('#phonepePG_payment_area div.message').html('<div class="alert alert-danger">' + data.message +'</div>');
            }
            $('#button-fetch i').removeClass('fa-spin');
        }
      });
    });
</script>
{% endif %} 

